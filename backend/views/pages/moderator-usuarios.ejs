
<section class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8" data-aos="fade-up">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">Gestión de Usuarios</h1>
                    <p class="text-gray-600">Aprueba o rechaza usuarios registrados</p>
                </div>
                <a href="/moderator" class="text-blue-600 hover:text-blue-700 font-medium">
                    ← Volver al Panel
                </a>
            </div>
        </div>

        <!-- Filters -->
        <div class="mb-6 flex gap-4" data-aos="fade-up" data-aos-delay="100">
            <button onclick="loadUsers('pendiente')" class="px-4 py-2 bg-yellow-100 text-yellow-800 rounded-lg hover:bg-yellow-200 font-medium">
                Pendientes
            </button>
            <button onclick="loadUsers('aprobado')" class="px-4 py-2 bg-green-100 text-green-800 rounded-lg hover:bg-green-200 font-medium">
                Aprobados
            </button>
            <button onclick="loadUsers('rechazado')" class="px-4 py-2 bg-red-100 text-red-800 rounded-lg hover:bg-red-200 font-medium">
                Rechazados
            </button>
            <button onclick="loadUsers('')" class="px-4 py-2 bg-gray-100 text-gray-800 rounded-lg hover:bg-gray-200 font-medium">
                Todos
            </button>
        </div>

        <!-- Users List -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden" data-aos="fade-up" data-aos-delay="200">
            <div id="usersList" class="p-6">
                <div class="text-center py-12">
                    <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto"></div>
                    <p class="mt-4 text-gray-600">Cargando usuarios...</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal for User Details -->
<div id="userModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="p-6">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Detalles del Usuario</h2>
                <button onclick="closeUserModal()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div id="userDetails" class="space-y-4"></div>
            <div class="mt-6 flex gap-4">
                <button onclick="approveUser()" class="flex-1 bg-green-600 text-white py-3 rounded-lg hover:bg-green-700 font-medium">
                    Aprobar
                </button>
                <button onclick="rejectUser()" class="flex-1 bg-red-600 text-white py-3 rounded-lg hover:bg-red-700 font-medium">
                    Rechazar
                </button>
            </div>
        </div>
    </div>
</div>

<script>
let currentFilter = 'pendiente';
let currentUserId = null;

document.addEventListener('DOMContentLoaded', function() {
    loadUsers('pendiente');
});

async function loadUsers(estado) {
    currentFilter = estado;
    const token = localStorage.getItem('token');
    
    // Datos mock para modo solo frontend
    const mockUsers = [
        {
            _id: '1',
            nombreEmpresa: 'Empresa Tech S.A.S.',
            email: 'empresa1@example.com',
            role: 'ofertante',
            sector: 'Tecnología',
            estadoRegistro: estado || 'pendiente',
            formalizada: true,
            representante: { nombre: 'Juan Pérez', cargo: 'CEO' },
            datosContacto: { telefono: '+57 300 123 4567', direccion: 'Calle 123 #45-67' }
        },
        {
            _id: '2',
            nombreEmpresa: 'Startup Innovadora',
            email: 'startup@example.com',
            role: 'demandante',
            sector: 'Innovación',
            estadoRegistro: estado || 'pendiente',
            formalizada: false,
            representante: { nombre: 'María García', cargo: 'Fundadora' },
            datosContacto: { telefono: '+57 300 987 6543', direccion: 'Carrera 45 #12-34' }
        },
        {
            _id: '3',
            nombreEmpresa: 'Consultoría Digital',
            email: 'consultoria@example.com',
            role: 'ofertante',
            sector: 'Consultoría',
            estadoRegistro: estado || 'pendiente',
            formalizada: true,
            representante: { nombre: 'Carlos Rodríguez', cargo: 'Director' },
            datosContacto: { telefono: '+57 300 555 1234', direccion: 'Av. Principal #100' }
        }
    ].filter(u => !estado || u.estadoRegistro === estado);

    // Si no hay token, usar datos mock
    if (!token) {
        setTimeout(() => displayUsers(mockUsers), 300);
        return;
    }

    const url = estado ? `/api/moderator/users?estado=${estado}` : '/api/moderator/users';
    
    try {
        const res = await fetch(url, {
            headers: { 'Authorization': `Bearer ${token}` }
        });

        if (!res.ok) throw new Error('Error al cargar usuarios');

        const users = await res.json();
        displayUsers(users);
    } catch (error) {
        console.log('Modo solo frontend - usando datos mock');
        displayUsers(mockUsers);
    }
}

function displayUsers(users) {
    const container = document.getElementById('usersList');
    
    if (users.length === 0) {
        container.innerHTML = `
            <div class="text-center py-12">
                <p class="text-gray-600">No hay usuarios con este estado</p>
            </div>
        `;
        return;
    }

    container.innerHTML = users.map(user => `
        <div class="border-b border-gray-200 last:border-0 py-4">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <div class="flex items-center gap-4">
                        <div>
                            <h3 class="font-semibold text-gray-900">${user.nombreEmpresa || 'Sin nombre'}</h3>
                            <p class="text-sm text-gray-600">${user.email}</p>
                            <div class="flex items-center gap-2 mt-2">
                                <span class="px-2 py-1 text-xs rounded-full ${
                                    user.estadoRegistro === 'aprobado' ? 'bg-green-100 text-green-800' :
                                    user.estadoRegistro === 'rechazado' ? 'bg-red-100 text-red-800' :
                                    'bg-yellow-100 text-yellow-800'
                                }">
                                    ${user.estadoRegistro}
                                </span>
                                <span class="px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded-full">
                                    ${user.role}
                                </span>
                                <span class="text-xs text-gray-500">
                                    ${user.sector || 'Sin sector'}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex gap-2">
                    <button onclick="viewUserDetails('${user._id}')" class="px-4 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 font-medium">
                        Ver Detalles
                    </button>
                </div>
            </div>
        </div>
    `).join('');
}

async function viewUserDetails(userId) {
    currentUserId = userId;
    const token = localStorage.getItem('token');
    
    // Datos mock
    const mockUser = {
        _id: userId,
        nombreEmpresa: 'Empresa Tech S.A.S.',
        email: 'empresa1@example.com',
        role: 'ofertante',
        sector: 'Tecnología',
        estadoRegistro: 'pendiente',
        formalizada: true,
        nit: '900123456-7',
        representante: { nombre: 'Juan Pérez', cargo: 'CEO', documento: '1234567890' },
        datosContacto: { telefono: '+57 300 123 4567', direccion: 'Calle 123 #45-67, Bogotá' }
    };
    
    if (!token) {
        displayUserModal(mockUser);
        return;
    }
    
    try {
        const res = await fetch(`/api/moderator/users/${userId}`, {
            headers: { 'Authorization': `Bearer ${token}` }
        });

        if (!res.ok) throw new Error('Error al cargar usuario');

        const user = await res.json();
        displayUserModal(user);
    } catch (error) {
        console.log('Modo solo frontend - usando datos mock');
        displayUserModal(mockUser);
    }
}

function displayUserModal(user) {
    const details = document.getElementById('userDetails');
    details.innerHTML = `
        <div class="grid grid-cols-2 gap-4">
            <div>
                <p class="text-sm text-gray-600">Empresa</p>
                <p class="font-semibold">${user.nombreEmpresa || 'N/A'}</p>
            </div>
            <div>
                <p class="text-sm text-gray-600">Email</p>
                <p class="font-semibold">${user.email}</p>
            </div>
            <div>
                <p class="text-sm text-gray-600">Rol</p>
                <p class="font-semibold">${user.role}</p>
            </div>
            <div>
                <p class="text-sm text-gray-600">Sector</p>
                <p class="font-semibold">${user.sector || 'N/A'}</p>
            </div>
            <div>
                <p class="text-sm text-gray-600">Formalizada</p>
                <p class="font-semibold">${user.formalizada ? 'Sí' : 'No'}</p>
            </div>
            <div>
                <p class="text-sm text-gray-600">Estado</p>
                <p class="font-semibold">${user.estadoRegistro}</p>
            </div>
        </div>
        ${user.representante ? `
            <div class="mt-4 pt-4 border-t">
                <p class="text-sm font-semibold text-gray-700 mb-2">Representante</p>
                <p class="text-sm text-gray-600">Nombre: ${user.representante.nombre || 'N/A'}</p>
                <p class="text-sm text-gray-600">Cargo: ${user.representante.cargo || 'N/A'}</p>
            </div>
        ` : ''}
        ${user.datosContacto ? `
            <div class="mt-4 pt-4 border-t">
                <p class="text-sm font-semibold text-gray-700 mb-2">Contacto</p>
                <p class="text-sm text-gray-600">Teléfono: ${user.datosContacto.telefono || 'N/A'}</p>
                <p class="text-sm text-gray-600">Dirección: ${user.datosContacto.direccion || 'N/A'}</p>
            </div>
        ` : ''}
    `;
    document.getElementById('userModal').classList.remove('hidden');
}

function closeUserModal() {
    document.getElementById('userModal').classList.add('hidden');
    currentUserId = null;
}

async function approveUser() {
    if (!currentUserId) return;
    await updateUserStatus(currentUserId, 'aprobado');
}

async function rejectUser() {
    if (!currentUserId) return;
    await updateUserStatus(currentUserId, 'rechazado');
}

async function updateUserStatus(userId, estado) {
    const token = localStorage.getItem('token');
    
    if (!token) {
        // Modo solo frontend - simular actualización
        alert(`Usuario ${estado} exitosamente (modo demo)`);
        closeUserModal();
        loadUsers(currentFilter);
        return;
    }
    
    try {
        const res = await fetch(`/api/moderator/users/${userId}/estado`, {
            method: 'PATCH',
            headers: {
                'Authorization': `Bearer ${token}`,
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ estado })
        });

        if (!res.ok) throw new Error('Error al actualizar estado');

        alert(`Usuario ${estado} exitosamente`);
        closeUserModal();
        loadUsers(currentFilter);
    } catch (error) {
        console.error('Error:', error);
        alert('Error al actualizar estado del usuario');
    }
}
</script>

