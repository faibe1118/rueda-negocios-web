<script>
// Prevenir cualquier redirect o alert no deseado
window.addEventListener('beforeunload', function(e) {
    // Solo prevenir si realmente es necesario
});

document.addEventListener('DOMContentLoaded', async function() {
    // Datos mock para visualización del frontend
    // En producción, estos datos vendrán de la API
    
    // Simular carga de datos
    setTimeout(() => {
        document.getElementById('pendingUsersCount').textContent = '12';
        document.getElementById('pendingEventsCount').textContent = '8';
        document.getElementById('pendingPQRSCount').textContent = '5';
        document.getElementById('totalUsersCount').textContent = '156';
    }, 500);

    // Si hay token, intentar cargar datos reales
    const token = localStorage.getItem('token');
    if (token) {
        try {
            const [usersRes, eventsRes, pqrsRes] = await Promise.all([
                fetch('/api/moderator/users?estado=pendiente', {
                    headers: { 'Authorization': `Bearer ${token}` }
                }).catch(() => null),
                fetch('/api/moderator/events/pending', {
                    headers: { 'Authorization': `Bearer ${token}` }
                }).catch(() => null),
                fetch('/api/moderator/pqrs?estado=pendiente', {
                    headers: { 'Authorization': `Bearer ${token}` }
                }).catch(() => null)
            ]);

            if (usersRes && usersRes.ok) {
                const users = await usersRes.json();
                document.getElementById('pendingUsersCount').textContent = users.length;
            }

            if (eventsRes && eventsRes.ok) {
                const events = await eventsRes.json();
                document.getElementById('pendingEventsCount').textContent = events.length;
            }

            if (pqrsRes && pqrsRes.ok) {
                const pqrs = await pqrsRes.json();
                document.getElementById('pendingPQRSCount').textContent = pqrs.length;
            }

            const totalUsersRes = await fetch('/api/moderator/users', {
                headers: { 'Authorization': `Bearer ${token}` }
            }).catch(() => null);
            
            if (totalUsersRes && totalUsersRes.ok) {
                const allUsers = await totalUsersRes.json();
                document.getElementById('totalUsersCount').textContent = allUsers.length;
            }
        } catch (error) {
            console.log('Modo solo frontend - usando datos mock');
        }
    }
});
</script>

